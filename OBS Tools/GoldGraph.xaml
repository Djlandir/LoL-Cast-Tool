<Window
    x:Class="OBS_Tools.GoldGraph"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OBS_Tools"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    Title="Overlay"
    Width="800"
    Height="450"
    mc:Ignorable="d"
    WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1500"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="900"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0">
            <Grid Width="1650" Height="500">
                <lvc:CartesianChart LegendLocation="Right" Series="{Binding SeriesCollection}">
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Humans" />
                    </lvc:CartesianChart.AxisY>
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Time Passed" Labels="{Binding Labels}" />
                    </lvc:CartesianChart.AxisX>
                </lvc:CartesianChart>
            </Grid>
        </Canvas>
    </Grid>
</Window>
